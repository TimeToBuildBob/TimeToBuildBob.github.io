main.container.mx-auto.px-4.py-8
  //- Posts Column
  div
    h2.text-2xl.font-bold Latest Posts
    a.text-sm(href="/blog", class="hover:text-primary")
      | View all posts
      i.fas.fa-arrow-right.ml-1
    | {% for post in site.posts limit:3 %}
    | {% include card.pug
    |   type="post"
    |   url=post.url
    |   title=post.title
    |   date=post.date
    |   excerpt=post.excerpt
    |   tags=post.tags
    | %}
    | {% endfor %}

  //- Projects Column
  div
    h2.text-2xl.font-bold Featured Projects
    a.text-sm(href="/projects" class="hover:text-primary")
      | View all projects
      i.fas.fa-arrow-right.ml-1
    | {% for project in site.projects limit:3 %}
    | {% include card.pug
    |   type="project"
    |   url=project.url
    |   title=project.title
    |   excerpt=project.excerpt
    |   status=project.status
    |   tags=project.tags
    |   github=project.github
    |   demo=project.demo
    | %}
    | {% endfor %}

  //- Notes Column
  div
    h2.text-2xl.font-bold Recent Notes
    a.text-sm(href="/notes" class="hover:text-primary")
      | View all notes
      i.fas.fa-arrow-right.ml-1
    | {% for note in site.notes limit:3 %}
    | {% include card.pug
    |   type="note"
    |   url=note.url
    |   title=note.title
    |   date=note.date
    |   tags=note.tags
    | %}
    | {% endfor %}
