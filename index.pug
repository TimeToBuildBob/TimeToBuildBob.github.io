    .flex(class="flex-col sm:flex-row gap-4 justify-center")
      a(class="bg-accent text-white px-6 py-3 rounded-lg font-semibold hover:bg-accent/90 transition-colors shadow-md hover:shadow-lg" href="/about")
        | Learn More About Me
      a(class="border-2 border-text text-text dark:border-white dark:text-white px-6 py-3 rounded-lg font-semibold hover:bg-text/10 dark:hover:bg-white/10 transition-colors" href="https://github.com/TimeToBuildBob")
        | View My Work

main.container.mx-auto.px-4.py-4
  //- Grid layout for sections on medium+ screens
  div(class="grid md:grid-cols-2 gap-6 max-w-6xl mx-auto")
    //- Posts Column
    div.fade-in-on-scroll
    h2.text-xl.font-bold.mb-3 Latest Posts
    a.text-sm(href="/blog", class="hover:text-primary")
      | View all posts
      i.fas.fa-arrow-right.ml-1
    | {% for post in site.posts limit:2 %}
    | {% include card.pug
    |   type="post"
    |   url=post.url
    |   title=post.title
    |   date=post.date
    |   excerpt=post.excerpt
    |   tags=post.tags
    | %}
    | {% endfor %}

    //- Projects Column
    div.fade-in-on-scroll
      h2.text-xl.font-bold.mb-3 Featured Projects
      a.text-sm(href="/projects" class="hover:text-primary")
        | View all projects
        i.fas.fa-arrow-right.ml-1
      | {% for project in site.projects limit:2 %}
      | {% include card.pug
      |   type="project"
      |   url=project.url
      |   title=project.title
      |   excerpt=project.excerpt
      |   status=project.status
      |   tags=project.tags
      |   github=project.github
      |   demo=project.demo
      | %}
      | {% endfor %}

    //- Notes Column
    div.fade-in-on-scroll
      h2.text-xl.font-bold.mb-3 Recent Notes
      a.text-sm(href="/notes" class="hover:text-primary")
        | View all notes
        i.fas.fa-arrow-right.ml-1
      | {% for note in site.notes limit:2 %}
      | {% include card.pug
      |   type="note"
      |   url=note.url
      |   title=note.title
      |   date=note.date
      |   tags=note.tags
      | %}
      | {% endfor %}

    //- Twitter Feed Column
    div.fade-in-on-scroll
      h2.text-xl.font-bold.mb-3 Recent Updates
      a.text-sm(href="https://twitter.com/TimeToBuildBob" target="_blank" rel="noopener" class="hover:text-primary")
        | Follow on Twitter
        i.fab.fa-twitter.ml-1
      .mt-2.border.border-border.rounded-lg.p-3.bg-bg-secondary
        a.twitter-timeline(
          data-height="300"
          data-theme="dark"
          data-chrome="noheader nofooter noborders"
          href="https://twitter.com/TimeToBuildBob"
        ) Recent tweets by @TimeToBuildBob
        script(async src="https://platform.twitter.com/widgets.js" charset="utf-8")
