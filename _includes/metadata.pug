//- Metadata line (date, author, reading time) is kept compact on one row.
//- Tags are rendered separately below as clickable pills linking to /tags/#name,
//- to avoid crowding the metadata line. The \# escape is required because Pug
//- interprets #{ } as string interpolation.
.meta
  | {% if include.date %}
  .date
    i.far.fa-calendar
    | {{ include.date }}
  | {% endif %}
  | {% if include.author %}
  .author
    i.far.fa-user
    | {{ include.author }}
  | {% endif %}
  | {% if include.reading_time %}
  .reading-time
    i.far.fa-clock
    | {{ include.reading_time }}
  | {% endif %}
| {% if include.tags %}
.meta-tags
  | {% for tag in include.tags %}
  a.no-underline(href="/tags/\#{{ tag }}" class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary/80 hover:bg-primary/20 hover:text-primary transition-colors")
    | \#{{ tag }}
  | {% endfor %}
| {% endif %}
